{
    "openapi": "3.0.0",
    "info": {
        "title": "Tech Challenge API",
        "description": "Documentação das APIs de autoatendimento da lanchonete.",
        "version": "1.0.0"
    },
    "paths": {
        "/api/clients": {
            "get": {
                "tags": [
                    "Clientes"
                ],
                "summary": "Listar todos os clientes",
                "description": "Retorna uma lista de todos os clientes cadastrados.",
                "operationId": "d00d20521584ab5da83e088abb7aded2",
                "responses": {
                    "200": {
                        "description": "Lista de clientes retornada com sucesso.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "properties": {
                                            "name": {
                                                "type": "string",
                                                "example": "João da Silva"
                                            },
                                            "email": {
                                                "type": "string",
                                                "example": "joao@gmail.com"
                                            },
                                            "cpf": {
                                                "type": "string",
                                                "example": "12345678900"
                                            },
                                            "phone": {
                                                "type": "string",
                                                "example": "11999998888"
                                            }
                                        },
                                        "type": "object"
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "Clientes"
                ],
                "summary": "Cadastrar novo cliente",
                "description": "Cadastra um novo cliente com nome, email, CPF e telefone.",
                "operationId": "f1e86e5b79fedfa6593067977292b13b",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "name",
                                    "email",
                                    "cpf",
                                    "phone"
                                ],
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "example": "João da Silva"
                                    },
                                    "email": {
                                        "type": "string",
                                        "example": "joao@gmail.com"
                                    },
                                    "cpf": {
                                        "type": "string",
                                        "example": "12345678900"
                                    },
                                    "phone": {
                                        "type": "string",
                                        "example": "11999998888"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Cliente cadastrado com sucesso."
                    },
                    "422": {
                        "description": "Erro de validação: CPF já cadastrado ou dados inválidos."
                    }
                }
            }
        },
        "/api/products": {
            "get": {
                "tags": [
                    "Produtos"
                ],
                "summary": "Listar todos os produtos",
                "description": "Retorna uma lista de todos os produtos cadastrados no sistema.",
                "operationId": "6d8ae74dcafe19c4813904d4ea9e4c57",
                "responses": {
                    "200": {
                        "description": "Lista de produtos retornada com sucesso.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "properties": {
                                            "id": {
                                                "type": "integer",
                                                "example": 1
                                            },
                                            "name": {
                                                "type": "string",
                                                "example": "Produto A"
                                            },
                                            "description": {
                                                "type": "string",
                                                "example": "Descrição do produto A."
                                            },
                                            "price": {
                                                "type": "number",
                                                "format": "float",
                                                "example": 29.99
                                            },
                                            "discount": {
                                                "type": "number",
                                                "format": "float",
                                                "example": 5
                                            },
                                            "stockQuantity": {
                                                "type": "integer",
                                                "example": 100
                                            },
                                            "active": {
                                                "type": "boolean",
                                                "example": true
                                            },
                                            "category": {
                                                "type": "integer",
                                                "example": 2,
                                                "nullable": true
                                            }
                                        },
                                        "type": "object"
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "Produtos"
                ],
                "summary": "Cadastrar um novo produto",
                "description": "Cria um novo produto no sistema com as informações fornecidas.",
                "operationId": "9f0b814cd8d69075ed70d4cc79c9f417",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "name",
                                    "price",
                                    "description",
                                    "stockQuantity"
                                ],
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "example": "Produto A"
                                    },
                                    "price": {
                                        "type": "number",
                                        "format": "float",
                                        "example": 29.99
                                    },
                                    "description": {
                                        "type": "string",
                                        "example": "Descrição detalhada do produto A."
                                    },
                                    "discount": {
                                        "type": "number",
                                        "format": "float",
                                        "example": 5
                                    },
                                    "image": {
                                        "type": "string",
                                        "format": "url",
                                        "example": "https://meusite.com/imagem.jpg"
                                    },
                                    "stockQuantity": {
                                        "type": "integer",
                                        "example": 100
                                    },
                                    "active": {
                                        "type": "boolean",
                                        "example": true
                                    },
                                    "category": {
                                        "type": "integer",
                                        "example": 2,
                                        "nullable": true
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Produto cadastrado com sucesso.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": true
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Product added successfully"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Erro de validação: dados inválidos ou produto já cadastrado."
                    }
                }
            }
        },
        "/products/{id}": {
            "put": {
                "tags": [
                    "Produtos"
                ],
                "summary": "Atualizar um produto existente",
                "description": "Atualiza os dados de um produto existente no sistema com base no ID fornecido.",
                "operationId": "1b73c420e0cf9fb1cb88dcf445b9428b",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID do produto a ser atualizado",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "example": 1
                        }
                    }
                ],
                "requestBody": {
                    "description": "Dados do produto a ser atualizado",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "name",
                                    "price",
                                    "description",
                                    "stock"
                                ],
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "example": "Produto B"
                                    },
                                    "price": {
                                        "type": "number",
                                        "format": "float",
                                        "example": 49.99
                                    },
                                    "description": {
                                        "type": "string",
                                        "example": "Descrição do produto atualizado."
                                    },
                                    "stock": {
                                        "type": "integer",
                                        "example": 50
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Produto atualizado com sucesso.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": true
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Product updated successfully"
                                        },
                                        "product": {
                                            "properties": {
                                                "id": {
                                                    "type": "integer",
                                                    "example": 1
                                                },
                                                "name": {
                                                    "type": "string",
                                                    "example": "Produto B"
                                                },
                                                "price": {
                                                    "type": "number",
                                                    "format": "float",
                                                    "example": 49.99
                                                },
                                                "description": {
                                                    "type": "string",
                                                    "example": "Descrição detalhada do produto atualizado."
                                                },
                                                "stock": {
                                                    "type": "integer",
                                                    "example": 50
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Produto não encontrado.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": false
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Product not found"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Erro de validação: dados inválidos.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": false
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Validation error"
                                        },
                                        "errors": {
                                            "type": "object",
                                            "example": {
                                                "name": [
                                                    "O campo nome é obrigatório."
                                                ],
                                                "price": [
                                                    "O preço deve ser um número positivo."
                                                ]
                                            },
                                            "additionalProperties": [
                                                {
                                                    "type": "array",
                                                    "items": {
                                                        "type": "string"
                                                    },
                                                    "property": null
                                                }
                                            ]
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/products/{id}": {
            "get": {
                "tags": [
                    "Produtos"
                ],
                "summary": "Buscar produto por ID",
                "description": "Retorna os dados de um produto específico pelo ID.",
                "operationId": "f6410f1810b0a90ba3d72d5b8250a27d",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID do produto",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "example": 1
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Dados do produto retornado com sucesso.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "id": {
                                            "type": "integer",
                                            "example": 1
                                        },
                                        "name": {
                                            "type": "string",
                                            "example": "Produto A"
                                        },
                                        "description": {
                                            "type": "string",
                                            "example": "Descrição do produto"
                                        },
                                        "image": {
                                            "type": "string",
                                            "example": "https://meusite.com/imagem.jpg"
                                        },
                                        "price": {
                                            "type": "number",
                                            "format": "float",
                                            "example": 29.9
                                        },
                                        "discount": {
                                            "type": "number",
                                            "format": "float",
                                            "example": 5
                                        },
                                        "active": {
                                            "type": "boolean",
                                            "example": true
                                        },
                                        "stockQuantity": {
                                            "type": "integer",
                                            "example": 100
                                        },
                                        "categoryId": {
                                            "type": "integer",
                                            "example": 2
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Produto não encontrado."
                    }
                }
            },
            "delete": {
                "tags": [
                    "Produtos"
                ],
                "summary": "Remover um produto",
                "description": "Remove permanentemente um produto do sistema pelo seu ID.",
                "operationId": "3dda9543e42196cc1ff7b18d2c9f9357",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID do produto a ser removido",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "example": 1
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Produto removido com sucesso.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": true
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Produto removido com sucesso."
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Produto não encontrado."
                    }
                }
            }
        },
        "/api/products/category/{categoryId}": {
            "get": {
                "tags": [
                    "Produtos"
                ],
                "summary": "Listar produtos por categoria",
                "description": "Retorna todos os produtos associados a uma determinada categoria.",
                "operationId": "f366211b4b7e87be15bcf4fc750bedc1",
                "parameters": [
                    {
                        "name": "categoryId",
                        "in": "path",
                        "description": "ID da categoria",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "example": 2
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Lista de produtos encontrada com sucesso.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "properties": {
                                            "id": {
                                                "type": "integer",
                                                "example": 1
                                            },
                                            "name": {
                                                "type": "string",
                                                "example": "Produto A"
                                            },
                                            "description": {
                                                "type": "string",
                                                "example": "Descrição do produto"
                                            },
                                            "image": {
                                                "type": "string",
                                                "example": "https://meusite.com/imagem.jpg"
                                            },
                                            "price": {
                                                "type": "number",
                                                "format": "float",
                                                "example": 29.9
                                            },
                                            "discount": {
                                                "type": "number",
                                                "format": "float",
                                                "example": 5
                                            },
                                            "active": {
                                                "type": "boolean",
                                                "example": true
                                            },
                                            "stockQuantity": {
                                                "type": "integer",
                                                "example": 100
                                            },
                                            "categoryId": {
                                                "type": "integer",
                                                "example": 2
                                            }
                                        },
                                        "type": "object"
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Nenhum produto encontrado para a categoria informada.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": false
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Nenhum produto encontrado."
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "tags": [
        {
            "name": "Clientes",
            "description": "Clientes"
        },
        {
            "name": "Produtos",
            "description": "Produtos"
        }
    ]
}